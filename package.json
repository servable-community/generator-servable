{
    "name": "generator-servable",
    "version": "0.0.0-development",
    "description": "Generates a servable node project.",
    "type": "module",
    "author": {
        "name": "Aboubacar Doucoure",
        "email": "yelounak@gmail.com",
        "url": "https://anak.io/doucoure"
    },
    "keywords": [
        "node",
        "protocols",
        "servable",
        "yeoman-generator"
    ],
    "exports_dist": {
        "default": "./generators/app/index.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yelounak/generator-servable.git"
    },
    "bugs": {
        "url": "https://github.com/yelounak/generator-servable/issues"
    },
    "main": "./generators/app/index.js",
    "homepage": "http://servable.app",
    "license": "MIT",
    "engines": {
        "node": ">=14.15.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "test_": "mocha",
        "test": "echo skipping pretest",
        "prepublishOnly": "npm test",
        "preversion": "npm test",
        "postversion": "git push && git push --tags",
        "pretest_": "eslint .",
        "pretest": "echo skipping pretest",
        "semantic-release": "semantic-release",
        "acp": "git add . && npm run commit && git push",
        "commit": "git-cz",
        "size": "size-limit",
        "analyze": "size-limit --why"
    },
    "dependencies": {
        "servable-engine": "^1.1.8",
        "bluebird": "^3.7.2",
        "chalk": "^4.1.2",
        "common-path": "^1.0.1",
        "dotenv": "^16.0.1",
        "fuzzy": "^0.1.3",
        "generator-yo-es6": "^1.4.0",
        "get-port": "^6.1.2",
        "inquirer": "^9.2.11",
        "inquirer-autocomplete-prompt": "^3.0.0",
        "inquirer-checkbox-plus-prompt": "^1.4.2",
        "inquirer-file-tree-selection-prompt": "^2.0.5",
        "inquirer-parse-json-file": "^1.3.0",
        "inspirational-quotes": "^2.0.1",
        "underscore": "1.13.6",
        "update-notifier": "^6.0.2",
        "which": "^3.0.0",
        "yeoman-generator": "^5.9.0",
        "yosay": "^2.0.2"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.1",
        "@types/node": "^16.x",
        "@types/yeoman-generator": "^5.2.11",
        "coveralls": "^3.0.7",
        "dotenv": "^16.0.1",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.6.0",
        "eslint-config-xo": "^0.27.2",
        "lint-staged": "^9.4.3",
        "mocha": "^10.2.0",
        "yeoman-assert": "^3.1.1",
        "yeoman-environment": "^3.15.1",
        "yeoman-test": "^7.4.0",
        "yo": "^4.3.1",
        "@size-limit/preset-small-lib": "^4.10.2",
        "@babel/eslint-parser": "^7.22.15",
        "cz-conventional-changelog": "^3.3.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-config-standard-react": "^9.2.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.17.0",
        "eslint-plugin-standard": "^4.0.1",
        "husky": "^6.0.0",
        "javascript-obfuscator": "^4.0.0",
        "jest": "^29.7.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.4",
        "semantic-release": "^22.0.0",
        "size-limit": "^4.10.2"
    },
    "size-limit": [
        {
            "path": "dist/index.js",
            "limit": "600 KB"
        },
        {
            "path": "dist/index.modern.js",
            "limit": "600 KB"
        },
        {
            "path": "dist/index.umd.js",
            "limit": "600 KB"
        }
    ],
    "jest": {
        "testEnvironment": "node"
    },
    "_husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}